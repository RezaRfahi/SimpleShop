@model List<SliderImage>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<!-- Slider Section -->
<section id="slider">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (var i = 0; i < Model.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="slider-image-container">
                        <img src="~/image/slider/@Model[i].FileName" alt="@Model[i].Caption" class="d-block w-100">
                        <div class="carousel-caption">
                            <h5>@Model[i].Caption</h5>
                        </div>
                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Function to handle automatic transition every 5 seconds
            function slideSwitch() {
                var $active = $('#carouselExampleIndicators .carousel-item.active');
                var $next = $active.next();

                if ($next.length === 0) {
                    $next = $('#carouselExampleIndicators .carousel-item').first();
                }

                $active.removeClass('active');
                $next.addClass('active');
            }

            // Set the interval for automatic transition
            setInterval(slideSwitch, 5000);
        });
    </script>
}
